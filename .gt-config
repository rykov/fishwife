# -*- ruby -*-

Gravitext::DevTools.configure do |c|

  c.setup_header do |h|
    h.holder = "David Kellum"
    h.inception = 2011
    h.license = :apache
    h.exclusions += %w[ spec/data/* LICENSE example/* .travis.yml rdoc_css/**/* ]
  end

  c.setup_manifest do |m|
    m.exclusions += %w[ .travis.yml rdoc_css/**/* ]
  end
end
